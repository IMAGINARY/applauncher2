{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "plugin.json schema",
  "description": "See README for descriptions and defaults",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$"
    },
    "version": {
      "type": "string"
    },
    "scripts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "stylesheets": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["id"]
}
